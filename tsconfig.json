{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "target": "esnext",
  },
  "exclude": [
    "node_modules",
    "dist",
    ".vscode",
    "**/node_modules/*"
  ],
  "include": ["**/*.ts"]
}
