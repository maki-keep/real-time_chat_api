{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
  },
  "exclude": [
    "dist/**/*",
    "node_modules/**/*",
    "**/node_modules/**/*",
    "**/*.test.ts"
  ],
  "include": [
    "@types/**/*.ts",
    "src/**/*.ts"
  ]
}
